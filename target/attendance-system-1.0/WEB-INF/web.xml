<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.thphuc.system.controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EmailController</servlet-name>
        <servlet-class>com.thphuc.system.controller.teacher.EmailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmailController</servlet-name>
        <url-pattern>/teacher/sendMail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewAttendanceController</servlet-name>
        <servlet-class>com.thphuc.system.controller.viewattendance.ViewAttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewAttendanceController</servlet-name>
        <url-pattern>/teacher/attendance-detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ConfirmAttendanceController</servlet-name>
        <servlet-class>com.thphuc.system.controller.teacher.ConfirmAttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmAttendanceController</servlet-name>
        <url-pattern>/teacher/confirm</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AttendanceController</servlet-name>
        <servlet-class>com.thphuc.system.controller.teacher.AttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AttendanceController</servlet-name>
        <url-pattern>/teacher/attendance</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ScheduleController</servlet-name>
        <servlet-class>com.thphuc.system.controller.schedule.ScheduleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScheduleController</servlet-name>
        <url-pattern>/weeklySchedule</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.thphuc.system.controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.thphuc.system.controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReportAttendanceController</servlet-name>
        <servlet-class>com.thphuc.system.controller.teacher.ReportAttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportAttendanceController</servlet-name>
        <url-pattern>/teacher/report-attendance</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProfileController</servlet-name>
        <servlet-class>com.thphuc.system.controller.teacher.ProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileController</servlet-name>
        <url-pattern>/teacher/profile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StudentAttendanceController</servlet-name>
        <servlet-class>com.thphuc.system.controller.student.ReportAttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentAttendanceController</servlet-name>
        <url-pattern>/student/report-attendance</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddEventController</servlet-name>
        <servlet-class>com.thphuc.system.controller.teacher.AddEventController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddEventController</servlet-name>
        <url-pattern>/teacher/addEvent</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StudentProfileController</servlet-name>
        <servlet-class>com.thphuc.system.controller.student.ProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentProfileController</servlet-name>
        <url-pattern>/student/profile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
